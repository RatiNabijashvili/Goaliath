generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Task {
    id          String    @id @default(cuid())
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    name        String    @db.Text
    deadline    DateTime?
    isMilestone Boolean
    isComplete  Boolean
    goalId      String
    goal        Goal      @relation(fields: [goalId], references: [id])

    @@index([goalId])
}

model Goal {
    id          String    @id @default(cuid())
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    title       String
    description String?   @db.Text
    priority    Priority  @default(LOW)
    deadline    DateTime?
    isActive    Boolean   @default(true)
    isPublic    Boolean   @default(false)
    categoryId  String
    category    Category  @relation(fields: [categoryId], references: [id])
    tasks       Task[]
    userId      String
    Note        Note[]

    @@index([categoryId])
    @@index([userId])
}

model Category {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name      String
    icon      String
    userId    String
    goals     Goal[]

    @@index([userId])
}

model Note {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title     String   @default("untitled")
    body      String   @db.Text
    goalId    String
    goal      Goal     @relation(fields: [goalId], references: [id])

    @@index([goalId])
}

enum Priority {
    HIGH
    MEDIUM
    LOW
}
